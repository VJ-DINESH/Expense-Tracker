                <!-- Embedding jQuery script in EJS -->
                <script>
                    function togglePasswordVisibility(inputId) {
                        var x = document.getElementById(inputId);
                        if (x.type === "password") {
                            x.type = "text";
                        } else {
                            x.type = "password";
                        }
                    }
                </script>
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script src="theme/vendors/scripts/core.js "></script>
                <script src="theme/vendors/scripts/script.min.js "></script>
                <script src="theme/vendors/scripts/process.js "></script>
                <script src="theme/vendors/scripts/layout-settings.js "></script>
                <script src="src/plugins/jquery-steps/jquery.steps.js "></script>
                <script src="theme/vendors/scripts/steps-setting.js "></script>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


                <script>
                    $(document).ready(function () {
                        // Function to validate password
                        function validatePassword(password) {
                            var passwordRegex = /^(?=.[0-9])(?=.[!@#$%^&])[a-zA-Z0-9!@#$%^&]{6,}$/;
                            return passwordRegex.test(password);
                        }

                        // Function to check if passwords match
                        function passwordsMatch(password, confirmPassword) {
                            return password === confirmPassword;
                        }

                        // Function to enable/disable submit button based on validation result
                        function toggleSubmitButton(valid) {
                            $('#submit_btn').prop('disabled', !valid);
                        }

                        // Function to handle input in password fields
                        $('#password, #confirmPassword').on('input', function () {
                            var newPassword = $('#password').val();
                            var confirmPassword = $('#confirmPassword').val();

                            // Validate password format
                            var isPasswordValid = validatePassword(newPassword);
                            if (!isPasswordValid) {
                                $('#passwordStatus').text('Password must be at least 6 characters long and contain at least one symbol and one number');
                                toggleSubmitButton(false);
                                return;
                            }

                            // Check if passwords match
                            var passwordsMatched = passwordsMatch(newPassword, confirmPassword);
                            if (!passwordsMatched) {
                                $('#confirmPasswordStatus').text('Passwords do not match');
                                toggleSubmitButton(false);
                                return;
                            }

                            // Clear status messages if everything is correct
                            $('#passwordStatus, #confirmPasswordStatus').text('');
                            toggleSubmitButton(true);
                        });

                        // Function to handle form submission
                        $('#passwordForm').submit(function (event) {
                            event.preventDefault(); // Prevent default form submission

                            var newPassword = $('#password').val();
                            var confirmPassword = $('#confirmPassword').val();

                            // Create a data object to send to the server
                            var data = { newPassword, confirmPassword };

                            // Send AJAX request
                            $.ajax({
                                url: '/check-newpassword',
                                method: 'POST',
                                contentType: 'application/json',
                                data: JSON.stringify(data),
                                success: function (response) {
                                    // Handle success response
                                    alert(response.message); // Display success message
                                },
                                error: function (xhr, status, error) {
                                    // Handle error
                                    console.error('Error:', error);
                                    alert(xhr.responseJSON.error); // Display error message
                                }
                            });
                        });
                    });

                </script>
