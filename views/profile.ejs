                        <div class="title">
                            <h4>Profile</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-30">
                    <div class="pd-20 card-box height-200-p">
                        <form id="profile-form" action="/profile" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="_token" value="" <!-- Render CSRF token using EJS -->
