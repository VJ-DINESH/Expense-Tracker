                <div class="col-md-12 mb-30">
                    <div class="pd-20 card-box height-50-p bg-dark">


                            
                            <div class="form-group row mt-3">
                    


                                <div class="col-sm-3">
                                    <label class="col-form-label my-pull-right text-white">ID:</label>
                                </div>
                                <div class="col-sm-7">
                                  
                                    <input type="text" class="form-control" name="id" value="<%= id %>" readonly>
                                </div>
                            </div>
                            <div class="form-group row mt-3">
                                <div class="col-sm-3">
                                    <label class="col-form-label my-pull-right text-white">Username:</label>
                                </div>
                                <div class="col-sm-7">
                                   
                                    <input type="text" class="form-control" name="username" value="<%= username %>" readonly>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label class="col-form-label my-pull-right text-white">Email:</label>
                                </div>
                                <div class="col-sm-7">
                                   
                                    <input type="email" class="form-control" name="email" value="<%= email %>" readonly>
                                </div>
                            </div>
                        
                            <div class="text-center">
                                <% if (errorMessages && errorMessages.length > 0) { %>
                                    <div class="alert alert-danger">
                                        <% errorMessages.forEach(message => { %>
                                            <%= message %><br>
                                        <% }); %>
                                    </div>
                                <% } %>
                            
                            <!-- <button class="btn btn-success w-25">Save</button>
                            <div class="text-center"> -->
                                <br>
                            <% if (successMessages && successMessages.length > 0) { %>
                                <div class="alert alert-success">
                                    <% successMessages.forEach(message => { %>
                                        <%= message %><br>
                                    <% }); %>
                                </div><br>
                            <% } %>
                        </div>
<script>
     document.addEventListener('DOMContentLoaded', function () {
            const profilePhotoInput = document.getElementById('profile-photo-input');
            const profilePhotoImg = document.getElementById('profile-photo-img');

            profilePhotoInput.addEventListener('change', function () {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        profilePhotoImg.src = e.target.result; 
                    };

                    reader.readAsDataURL(file);
                }
            });
        });
</script>

