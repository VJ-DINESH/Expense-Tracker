<body>
    <body>
        <div class="login-header box-shadow">
           <div
               class="container-fluid d-flex justify-content-between align-items-center"
           >
               <div class="brand-logo">
                   <a href="login">
                       <img src="theme/vendors/images/l11-removebg-preview.png" alt="" />
                   </a>
               </div>
               <div class="login-menu">
                   
               </div>
           </div>
        </div> 
    <div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <img src="https://img.freepik.com/premium-vector/one-time-password-otp-security-verification-illustration_258153-461.jpg" class="otp-image img-fluid" alt="Image">
                </div>
                <!-- Right side with dark background content -->
                <div class="col-md-6">
                    <div class="login-box bg-white box-shadow border-radius-10">
                        <div class="login-title">
                            <h2 class="text-center text-primary">OTP</h2>
                        </div>
                        <h6 class="mb-20">
                            Enter OTP:
                        </h6>
                        <div class="login-body">
                            <% if (messages.error) { %>
								<div style="color: red;">
									<%= messages.error %>
								</div>
							<% } %>
						
							<% if (messages.success) { %>
								<div style="color: green;">
									<%= messages.success %>
								</div>
							<% } %>
                            
                            <form action="/otp" method="post">
								<div class="input-group custom">
									<input type="password" name="otp" class="form-control form-control-lg" placeholder="****" id="otp"/>
									<div class="input-group-append custom">
										<span class="input-group-text" onclick="togglePasswordVisibility('otp')"><i class="fa fa-eye" aria-hidden="true"></i></span>
										<span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
									</div>
								</div>
								
                                <button type="submit" class="btn btn-primary btn-block">Verify OTP</button>
                            </form>
							<hr>
							
                              <!-- Resend OTP button -->
                            <form action="/resend-otp" method="post">
                                <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Resend OTP</button>
                            </form>

							
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    <!-- Bootstrap JS CDN (Optional, for Bootstrap functionality) -->
	<script>
    function togglePasswordVisibility(inputId) {
        var x = document.getElementById(inputId);
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

	
